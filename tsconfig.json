{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist"
    },
    "exclude": [
        "dist"
    ],
    "include": [
        "src"
    ]
}